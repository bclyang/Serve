<div>
	<% include partial/sidebar %>
</div>
<!--HEADER END-->


<div class="container col-md-10" >

    <div class="title">My Panel</div>
                    
    <form accept-charset="utf-8" style="margin-bottom:20px">

    	<h4>App List</h4>
        <table class="table"> 
            <% for (i = user.programs.length-1; i >= 0; i--) {%>                   
            <tr>
                <td id=<%= user.programs[i].id %> class="col-md-11 field-name item-name"><%= user.programs[i].name %></td>
                <td><span class="glyphicon glyphicon-remove remove" aria-hidden="true"></span></td>
            </tr>
            <% } %>
            <tr>
                <td class="col-md-11 field-name item-name"><i><a href="/create">create a project ...</a></i></td>
            </tr>
        </table> 

    </form>

    <div class="col-md-11 create-section">
    


</div>


</body>

<script>
    $('.remove').click(function(){
        var $sib = $(this).parent().siblings('.item-name');
        var data = {
            programid: $sib.attr('id')
        };
        $.post('/user/program/remove', data, function( data ) {
            $sib.parent().fadeOut();
        }, 'json');
    });
</script>

</html>