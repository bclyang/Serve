<body>

<div class="decoration-box"></div>	

<div class="container">
	<form action="/login" method="post" accept-charset="utf-8">
		<h1 class="title">Login</h1>

		<div class="login-item">
			<label>Phone Number</label>
			<div>
				<input name="phone" type="text" class="form-control">
			</div>
		</div>

		<div class="login-item">
			<label>Password</label>
			<div>
				<input name="password" type="password" class="form-control">
			</div>
		</div>
		<a href=""><div class="forgot" style="text-align: center; padding-top: 10px; padding-right: 0; padding-left: 0;">Forgot your password?</div></a>

		<div style="margin-top:30px">
			<button type="submit" class="btn-item" style="float: right;  margin-right: 50px;">Login</button>
		</div>
	</form>
	<a href="/"><button class="btn-item" style="background-color:white;color:black;margin-right:10px;  margin-left: 30px;">Cancel</button></a>

</div>

</body>
</html>